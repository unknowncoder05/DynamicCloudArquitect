# Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# API Configuration
# ============================================

# API Gateway endpoint for starting/managing backend
# Example: https://apidynamiccloudarchitect.yerson.co/start
REACT_APP_API_GATEWAY_START_ENDPOINT=

# Base API URL (overridden dynamically when using on-demand backend)
# Example for local dev: http://localhost:8000/api/v1
# Example for prod: https://apidynamiccloudarchitect.yerson.co/api/v1
REACT_APP_API_URL=http://localhost:8000/api/v1

# ============================================
# Backend Configuration
# ============================================

# Backend server port (default: 8000)
REACT_APP_BACKEND_PORT=8000

# API base path (default: /api/v1)
REACT_APP_API_BASE_PATH=/api/v1

# ============================================
# Keep-Alive & Monitoring
# ============================================

# How often to ping backend to keep it alive (milliseconds)
# Should be less than inactivity timeout
# Default: 300000 (5 minutes)
REACT_APP_KEEP_ALIVE_INTERVAL=300000

# How long to wait for backend to start (milliseconds)
# Default: 90000 (90 seconds)
REACT_APP_STARTUP_TIMEOUT=90000

# Health check timeout (milliseconds)
# Default: 5000 (5 seconds)
REACT_APP_HEALTH_CHECK_TIMEOUT=5000

# Polling interval when waiting for backend startup (milliseconds)
# Default: 2000 (2 seconds)
REACT_APP_POLLING_INTERVAL=2000

# Delay before navigation after successful backend start (milliseconds)
# Default: 1000 (1 second)
REACT_APP_NAVIGATION_DELAY=1000

# ============================================
# Notes
# ============================================
#
# For local development:
# - Leave REACT_APP_API_GATEWAY_START_ENDPOINT empty
# - Set REACT_APP_API_URL to your local backend
#
# For production:
# - Set REACT_APP_API_GATEWAY_START_ENDPOINT to your API Gateway URL
# - REACT_APP_API_URL will be overridden dynamically by the backend manager
#
